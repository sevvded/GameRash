@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "İstek Listem - GameRash";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="hero-section text-center py-5 mb-4">
        <h1 class="display-4 fw-bold text-white mb-3">❤️ İstek Listem</h1>
        <p class="lead text-white-50 mb-4">Gelecekte satın almak istediğiniz oyunlar</p>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-heart fa-4x text-muted mb-4"></i>
            <h3 class="text-muted">İstek listeniz boş</h3>
            <p class="text-muted">Henüz hiç oyun eklememişsiniz.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="fas fa-shopping-cart me-2"></i>Oyun Mağazasına Git
            </a>
        </div>
    }
    else
    {
        <!-- Games Grid -->
        <div class="row">
            @foreach (var game in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 game-card-inner">
                        <div class="card-img-top-container">
                            <img src="@(string.IsNullOrEmpty(game.CoverImage) ? "/images/default-game.jpg" : "/images/" + game.CoverImage)" 
                                 class="card-img-top" alt="@game.Title" 
                                 onerror="this.src='/images/default-game.jpg'">
                            <div class="card-overlay">
                                <div class="overlay-buttons">
                                    <button class="btn btn-primary btn-sm">
                                        <i class="fas fa-shopping-cart me-1"></i>Satın Al
                                    </button>
                                    <button class="btn btn-outline-light btn-sm" onclick="removeFromWishlist(@game.GameID)">
                                        <i class="fas fa-heart-broken me-1"></i>Kaldır
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@game.Title</h5>
                            <p class="card-text text-muted small">@game.DeveloperName</p>
                            <p class="card-text">@(game.Description.Length > 100 ? game.Description.Substring(0, 100) + "..." : game.Description)</p>
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        @(game.AddedDate?.ToString("dd.MM.yyyy") ?? "Bilinmiyor")
                                    </small>
                                    <span class="price fw-bold text-success">₺@game.Price.ToString("F2")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function removeFromWishlist(gameId) {
            if (confirm('Bu oyunu istek listenizden kaldırmak istediğinizden emin misiniz?')) {
                fetch('/Wishlist/RemoveFromWishlist', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ gameId: gameId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Bir hata oluştu');
                });
            }
        }
    </script>
}
